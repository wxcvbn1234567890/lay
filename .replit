entrypoint = "main.py"
modules = ["python-3.10", "web", "nodejs-20", "nix"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["python", "launch.py"]
deploymentTarget = "vm"
ignorePorts = true

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Bot & Web Server"

[[workflows.workflow]]
name = "Discord Bot & Web Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python launch.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
